@using cythilya.Models;
@{
    Layout = "~/Views/Shared/_LayoutMe.cshtml";
    ViewBag.Tab = "";
    ViewBag.Title = "活動列表 | 讀書會";
    ViewBag.Description = "活動列表 | 讀書會";
    List<MeModels.Activity> activityList = ViewBag.ActivityList as List<MeModels.Activity>;
    activityList = activityList.OrderBy(x => x.ID).Reverse().ToList();    
}
<style>body.home #main {padding-top: 40px;}</style>
<div id="posts-list" class="cf">
    @if(activityList != null)
    {
        foreach (var item in activityList) 
        {
        <article class="format-standard">
            <div class="feature-image">
                <a href="/Me/Activity?id="@item.ID target="_blank">
                    <img src="@(item.Pic.First())" alt="@(item.Name)" />
                </a>
            </div>
            <div class="box cf">
                <div class="entry-date">
                    <div class="number">@(item.Day)</div>
                    <div class="month">@(item.Month)</div>
                </div>
                <div class="excerpt">
                    <a href="/Me/Activity?id="@item.ID target="_blank" class="post-heading" >@(item.Name)</a>
                    <p>@(item.Description)</p>
                    <p> <a href="/Me/Activity?id="@item.ID target="_blank" class="learnmore">Learn More</a></p>
                </div>
                <div class="meta">
                    <span class="user"><a href="https://plus.google.com/+CythilyaTang" title="Hsin-Hao Tang" target="_blank">Hsin-Hao Tang</a></span>
                    <span class="format">@(item.Time)</span>
                    @*
                    <span class="format">Post</span>
                    <span class="user"><a href="#">By LuisZuno, </a></span>
                    <span class="comments">16 comments</span>
                    <span class="tags"><a href="#">red</a>, <a href="#">cyan</a>, <a href="#">white</a>, <a href="#">blue</a></span>
                    *@
                </div>
            </div>
        </article>             
        }
    }
