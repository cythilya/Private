@using cythilya.Areas.EShopper.Models;
@{
    //social platforms, fake data
    List<Common.SocialList> socialList = new List<Common.SocialList>();

    var socialItem1 = new Common.SocialList();
    socialItem1.Name = "facebook";
    socialItem1.Link = "https://www.facebook.com/cythilya";
    socialList.Add(socialItem1);

    var socialItem2 = new Common.SocialList();
    socialItem2.Name = "twitter";
    socialItem2.Link = "https://twitter.com/cythilya";
    socialList.Add(socialItem2);

    var socialItem3 = new Common.SocialList();
    socialItem3.Name = "google-plus";
    socialItem3.Link = "https://plus.google.com/+CythilyaTang";
    socialList.Add(socialItem3);
    
    var socialItem4 = new Common.SocialList();
    socialItem4.Name = "linkedin";
    socialItem4.Link = "https://www.linkedin.com/in/cythilya";
    socialList.Add(socialItem4);
}
<header id="header" itemscope itemtype="http://schema.org/WPHeader">
	<div class="header_top">
		<div class="container">
			<div class="row">
				<div class="col-sm-6">
					<div class="contactinfo">
						<ul class="nav nav-pills">
							@*<li><a><i class="fa fa-phone"></i> +2 95 01 88 821</a></li>*@ @*隱藏電話*@
							<li><a href="mailto:cythilya@gmail.com" title="寫信給桑莫"><i class="fa fa-envelope"></i> 寫信給桑莫</a></li>
						</ul>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="social-icons pull-right">
						<ul class="nav navbar-nav">
                            @foreach (var item in socialList)
                            {
                            <li><a href="@(item.Link)" title="@(item.Name)" target="_blank"><i class="fa fa-@(item.Name)"></i></a></li>
                            }
                            @*
                                icon-class:
                                1. fa-facebook
                                2. fa-twitter
                                3. fa-linkedin
                                4. fa-dribbble
                                5. fa-google-plus
                            *@
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="header-middle">
		<div class="container">
			<div class="row">
				<div class="col-sm-4">
					<h1 class="logo pull-left" itemprop="name">
						<a href="/EShopper/Home" title="拍賣桑莫的生活。SEO遊樂場" itemprop="url">
                            <img src="/Content/eshopper/images/home/logo.png" alt="拍賣桑莫的生活。SEO遊樂場" />
                        </a>
                        @*
                            對於連結包圖片而沒有anchor text的狀況，這個連結的意義由圖片的alt attribute取而代之。
                            SEO benefit: anchor text > alt attribute
                            img title attribute does not have SEO benefit.
                        *@
					</h1>
				</div>
				<div class="col-sm-8">
					<div class="shop-menu pull-right">
						<ul id="navList" class="nav navbar-nav">
							@*
							<li><a href="#"><i class="fa fa-user"></i> Account</a></li>
							<li><a href="#"><i class="fa fa-star"></i> Wishlist</a></li>
							*@
							<li><a href="/EShopper/Order/Complete" title="結帳"><i class="fa fa-crosshairs"></i>結帳</a></li>
							<li><a href="/EShopper/Cart" title="購物車"><i class="fa fa-shopping-cart"></i>購物車</a></li>
							@if (User.Identity.IsAuthenticated)
                            {
                            <li><a href="#" title="登出" class="logout"><i class="fa fa-lock"></i>登出</a></li>
                            }
                            else
                            { 
                            <li><a href="/EShopper/Member/Register" title="註冊" class="register"><i class="fa fa-lock"></i>註冊</a></li>
                            <li><a href="/EShopper/Member/Login" title="登入" class="login"><i class="fa fa-lock"></i>登入</a></li>
                            }
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="header-bottom">
		<div class="container">
			<div class="row">
				<div class="col-sm-9">
					<div class="navbar-header">
						<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
							<span class="sr-only">Toggle navigation</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>
					</div>
					<nav class="mainmenu pull-left" itemscope itemtype="http://schema.org/SiteNavigationElement">
						<ul class="nav navbar-nav collapse navbar-collapse">
							<li>
                                <a href="/EShopper/Home" class="active" itemprop="url">
                                    <span itemprop="name">熱門商品</span>
                                </a>
                            </li>
							<li class="dropdown">
                                <a itemprop="url">
                                    <span itemprop="name">最新消息</span>
                                </a>
                            </li> 
						</ul>
					</nav>
				</div>
                @*
				<div class="col-sm-3">
					<div class="search_box pull-right">
						<input type="text" placeholder="Search"/>
					</div>
				</div>
                *@
			</div>
		</div>
	</div>
</header>