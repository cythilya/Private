@using cythilya.Models;
@{
    List<MeModels.Article> recentArticleList = ViewBag.RecentPostList as List<MeModels.Article>;
    List<MeModels.Article> articleList = ViewBag.ArticleList as List<MeModels.Article>;
    articleList = Enumerable.Reverse(articleList).ToList();
}
<footer>
	<div class="wrapper cf">
		<ul  class="widget-cols cf">
			<li class="first-col">
				<div class="widget-block">
					<h4>RECENT POSTS</h4>
                    @foreach (var item in recentArticleList)
                    {
  					<div class="recent-post cf">
						<a href="@(item.URL)" class="thumb" title="@(item.Name)"><img src="@(item.PicInFooter)" title="@(item.Name)" alt="@(item.Name)" /></a>
						<div class="post-head">
							<a href="@(item.URL)">@(item.Name)</a><span>@(item.Time)</span>
						</div>
					</div>                 
                    }
				</div>
			</li>
			<li class="second-col">
				<div class="widget-block">
					<h4>FEATURED POSTS</h4>
                    @foreach (var item in articleList)
                    {
                        if (item.isHighlight)
                        {
  					    <div class="recent-post cf">
						    <a href="@(item.URL)" class="thumb" title="@(item.Name)"><img src="@(item.PicInFooter)" title="@(item.Name)" alt="@(item.Name)" /></a>
						    <div class="post-head">
							    <a href="@(item.URL)">@(item.Name)</a><span>@(item.Time)</span>
						    </div>
					    </div>                                
                        }
                    }
				</div>
			</li>
