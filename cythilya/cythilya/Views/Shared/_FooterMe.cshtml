		<ul  class="widget-cols cf">
			<li class="first-col">
				<div class="widget-block">
					<h4>RECENT POSTS</h4>
                    @foreach (var item in recentArticleList)
                    {
  					<div class="recent-post cf">
						<a href="@(item.URL)" class="thumb" title="@(item.Name)" target="_blank"><img src="@(item.PicInFooter)" title="@(item.Name)" alt="@(item.Name)" /></a>
						<div class="post-head">
							<a href="@(item.URL)" title="@(item.Name)" target="_blank">@(item.Name)</a><span>@(item.Time)</span>
						</div>
					</div>                 
                    }
                    <a href="/Me/BlogArchieve" title="Archieve">Archieve</a>
				</div>
			</li>
			<li class="second-col">
				<div class="widget-block">
					<h4>FEATURED POSTS</h4>
                    @foreach (var item in featuredPostList)
                    {
                        if (item.isHighlight)
                        {
  					    <div class="recent-post cf">
						    <a href="@(item.URL)" class="thumb" title="@(item.Name)" target="_blank"><img src="@(item.PicInFooter)" title="@(item.Name)" alt="@(item.Name)" /></a>
						    <div class="post-head">
							    <a href="@(item.URL)" title="@(item.Name)" target="_blank">@(item.Name)</a><span>@(item.Time)</span>
