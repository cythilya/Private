@using cythilya.Models;
@{
    List<MeModels.Article> recentArticleList = ViewBag.RecentPostList as List<MeModels.Article>;
    List<MeModels.Article> featuredPostList = ViewBag.FeaturedPostList as List<MeModels.Article>;
    List<MeModels.RecentProject> recentProjectList = ViewBag.RecentProjectList as List<MeModels.RecentProject>;
}
<footer>
