<body>
<script type="text/x-handlebars" data-template-name="productlist/index">
	{{#each itemController="product"}}
		<tr {{bindAttr class="status"}}>
			<td>
				{{#if isEditing}}
					{{edit-product class="form-control" value=no}}
				{{else}}
					{{no}}
				{{/if}}
			</td>
			<td>
				{{#if isEditing}}
					<img class="thumbnail" {{bindAttr src="cover" alt="name"}} width="80">
					<input type="file" id="uploadFile">									
				{{else}}
					<img class="thumbnail" {{bindAttr src="cover" alt="name"}} width="80">	
				{{/if}}
			</td>
			<td>
				{{#if isEditing}}
					{{edit-product class="form-control" value=name}}
				{{else}}
					{{{name}}}
					{{#if isHot}}
					     <img src="img/icon_hot.png" width="16">
					{{/if}}								
				{{/if}}
			</td>
			<td>
				{{#if isEditing}}
					{{edit-product class="form-control" value=category}}
				{{else}}
					{{category}}
				{{/if}}
			</td>
	    </tr>
	{{/each}}
</script>	
<script type="text/x-handlebars" data-template-name="productlist">
<section id="productapp">
	<div id="pageIndex" class="container">
		<div class="row clearfix">
			<div class="col-md-12 column">
				<div class="page-header">
					<h1>
						Ember JS & SEO 
						<!--
						<small>
							After page loading, render some content.
						</small>
						-->
					</h1>
				</div>
				<p>After page loading, render some content.</p>
			</div>
		</div>
		<div class="row clearfix">
			<div class="col-md-12 column">
				<table class="table table-hover">
					<thead>
						<tr>
							<th class="no">編號</th>
							<th class="cover">預覽圖</th>
							<th class="name">名稱</th>
							<th class="category">描述</th>
						</tr>
					</thead>
					<tbody>
						{{outlet}}
					</tbody>
				</table>
			</div>
		</div>
